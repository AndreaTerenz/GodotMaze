script/source = "extends Node2D

var SCRN_SIZE : Vector2 = Vector2.ZERO
var grid : CellGrid = null

func _ready() -> void:
	randomize()
	self.SCRN_SIZE = get_viewport_rect().size - Vector2(0, 50)
	
	var cols = int(self.SCRN_SIZE.x / Cell.SIZE.x) 
	var rows = int(self.SCRN_SIZE.y / Cell.SIZE.y)
	var offset : Vector2 = (SCRN_SIZE - Cell.SIZE*Vector2(cols, rows))/2
	
	self.grid = CellGrid.new(rows, cols, offset)
	call_deferred(\"add_child\", self.grid)

func _input(_event: InputEvent) -> void:
	if Input.is_action_just_pressed(\"ui_cancel\"):
		print(\"quitting...\\n\\n\")
		
		get_tree().quit()

func _on_GenerateBtn_pressed() -> void:
	pass
"

